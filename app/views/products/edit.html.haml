
.wrapper
= form_for @product do |f|
  .wrapper__top
    =image_tag "https://i.gyazo.com/55694776f48f7cf4190906c84f120fce.png", width: 207
  .wrapper__main
    .wrapper__main__head
      %h2 商品の情報を入力
    .wrapper__main__image
      %h2
        出品画像
        %span.bgred 必須
      %p 最大10枚までアップロードできます
      .wrapper__main__image__drop-box
        %label#input-label
          =f.file_field :image, type: "file"
    .wrapper__main__item
      .wrapper__main__item__name
        %h3
          商品名
          %span.bgred 必須
        = f.text_field :name, placeholder: '商品名(必須40文字まで)'
      .wrapper__main__item__text
        %h3
          商品の説明
          %span.bgred 必須
        = f.text_field :content, placeholder: ' 商品の説明(必須1,000文字以内) (色、素材、重さ、定価、注意点など) 例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。', :size => "60x15"
    .wrapper__main__list-item
      .wrapper__main__list__name
        %p 商品の商品
      .wrapper__main__list_select_box
        .wrapper__main__list_select_top
          %p
            カテゴリー
            %span.bgred 必須
            = f.select :category,["レディース","メンズ","ベビー・キッズ","インテリア・住まい・小物","本・音楽・ゲーム","おもちゃ・ホビー・グッズ","コスメ・香水・美容","家電・スマホ・カメラ","スポーツ・レジャー","ハンドメイド","チケット","自動車・オートバイ","その他"]
            = f.select :category,["Tシャツ/カットソー(半袖/袖なし)", "Tシャツ/カットソー(七分/長袖)", "シャツ/ブラウス(半袖/袖なし)", "シャツ/ブラウス(七分/長袖)", "ポロシャツ", "キャミソール", "タンクトップ", "ホルターネック", "ニット/セーター", "チュニック", "カーディガン/ボレロ", "アンサンブル", "ベスト/ジレ", "パーカー", "トレーナー/スウェット", "ベアトップ/チューブトップ", "ジャージ", "その他"]
            = f.select :category,["テーラードジャケット", "ノーカラージャケット", "Gジャン/デニムジャケット", "レザージャケット", "ダウンジャケット", "ライダースジャケット", "ミリタリージャケット", "ダウンベスト", "ジャンバー/ブルゾン", "ポンチョ", "ロングコート", "トレンチコート", "ダッフルコート", "ピーコート", "チェスターコート", "モッズコート", "スタジャン", "毛皮/ファーコート", "スプリングコート", "スカジャン", "その他"]
        .wrapper__main__list_select_bottom
          %p
            商品の状態
            %span.bgred 必須
          =f.select :state,["---","新品、未使用","未使用に近い","目立った傷や汚れなし","やや傷や汚れあり","傷や汚れあり","全体的に状態が悪い"]
    .wrapper__main__list-delivery
      .wrapper__main__list__name
        %p
          配送について
          %span.fa.fa-question-circle
      .wrapper__main__list_select_box
        .wrapper__main__list_select_top
          %p
            配送料の負担
            %span.bgred 必須
          =f.select :bearer,["---","送料込み(出品者負担)","着払い(購入者負担)"]
        .wrapper__main__list_select_center
          %p
            発送元の地域
            %span.bgred 必須
            = f.collection_select :shipping, Prefecture.all, :id, :name
        .wrapper__main__list_select_bottom
          %p
            発送までの日数
            %span.bgred 必須
          =f.select :days ,["---","1~2日で発送","2~4日で発送","3~4日で発送"]
    .wrapper__main__list-price
      .wrapper__main__list__name
        %h5
          販売価格(300〜9,999,999)
          %span.fa.fa-question-circle
      .wrapper__main__list_select_box
        .wrapper__main__list_select_top
          %span
            価格
            %span.bgred 必須
          %span.children
            ¥
            = f.text_field :price, placeholder: '                          例）300', :class => 'aligncenter'
        .wrapper__main__list_select_center
          %p 販売手数料(10%)
          %a.children -
        .wrapper__main__list_select_bottom
          %p 販売利益
          %a.children -
    .wrapper__main__bottom
      %a.blue 禁止されている出品、行為
      %a
        を必ずご確認ください。
        %br/
      %a またブランド品でシリアルナンバー等がある場合はご記載ください。
      %a.blue 偽ブランドの販売
      %a は犯罪であり処罰される可能性があります。
      %br/
      %a また、出品を持ちまして
      %a.blue 加盟店規約
      %a に同意したことになります。
      %button.wrapper__main__bottom__red
        =f.submit '変更する'
      %button.wrapper__main__bottom__grey キャンセル
  .wrapper__bottom
    =link_to 'プライバシーポリシー'
    =link_to 'メルカリ利用規約'
    =link_to '特定商取引に関する表記'
    =image_tag "https://i.gyazo.com/13c20169c5519e47f5751462f12c04e6.png", width: 80
    %small @ 2019 Mercari

